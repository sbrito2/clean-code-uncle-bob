@model Coffe  

<html>
    <head>
        <meta name="viewport" content="width=device-width"/>
        <title>Tem certeza que deseja deletar?</title>
    </head>
    <body>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.CofId)
            </dt>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="CofId"/>
