@model Coffe  

<head>
    <meta name="viewport" content="width-device-width">
    <title>Alterar café</title>
</head>

<body>
    <h4>Alterar café</h4><br>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <input type="hidden" asp-for="CofId"/>
                <div class="form-group">
                    <label asp-for="CofCountry" class="control-label"></label>
                    <input asp-for="CofCountry" class="form-control"/>
                    <span asp-validation-for="CofCountry" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CofDescription" class="control-label"></label>
                    <input asp-for="CofDescription" class="form-control"/>
                    <span asp-validation-for="CofDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Alterar" class="btn-default"/>
                </div>
            </form>
        </div>
    </div>
</body>
<div>
    <a asp-action="Index">Voltar</a>
</div>
